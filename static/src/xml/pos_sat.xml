                <t t-esc="order.name"/><br/>
                <t t-esc="widget.pos.config.name"/><br/>
                <t t-if="order.tag_number">
                    Etiqueta: <t t-esc="order.tag_number" />
                    <br/>
                </t>
                <t t-if="order.take_out">
                    Para llevar
                    <br/>
                </t>
                Fecha: <t t-esc="moment(order.creation_date).format('L LT')"/><br/>
                Usuario: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br/>
                <table class='receipt-orderlines'>
                    <tr>
                        <td class="pos-right-align" style="font-size: 20px; font-family: courier; font-weight: bold;">
                            Cant
                        </td>
                        <td style="font-size: 20px; font-family: courier; font-weight: bold;">
                            Producto
                        </td>
                    </tr>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <td class="pos-right-align" style="font-size: 20px; font-family: courier; font-weight: bold;">
                            <t t-esc="orderline.get_quantity_str_with_unit()"/>
                        </td>
                        <td style="font-size: 20px; font-family: courier; font-weight: bold;">
